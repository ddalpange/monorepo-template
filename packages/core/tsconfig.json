{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
